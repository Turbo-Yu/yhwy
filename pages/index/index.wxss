/**index.wxss**/
.videocontainer{
  margin-top:20px;
  margin-bottom:2px;
  border-radius: 8px;
}
.homeimagecontainer{
  width: 100%;
  height: 180px;
}
.homeimage{
  width: 100%;
  height: 180px;
  border-radius: 8px;
}
.titlecontainer{
  width: 709rpx;
  position: absolute;
  margin-top:-87rpx;
  background: black no-repeat left 100%;
  opacity: 0.5;
  color: white;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}
.titlecontainer .title2{
  width: 80%;
  margin-left: 90rpx;
}
.titlecontainer image{
  width: 61rpx;
  height: 61rpx;
  position: absolute;
  margin: 14rpx;
  border-radius:50%;
  border-style:solid;
  border-color:green;
}
.titlecontainer .title2 .title{
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.titlecontainer .title2 .visitsum{
  font-weight: 400;
  font-size: 30rpx;
}
.videoplayer{
  margin-left: 10px;
  width: 100%;
  height: 180px;
  position: fixed;
  top:100px;
  z-index: 100;
  display: none;
}
.videoplayer video{
  width: 100%;
  height: 100%;
  position: relative;
}
.videoplayer .closebutton{
  text-align: center;
  width: 32px;
  height: 32px;
  left: 50%;
  position: relative;
  margin-left: -26px;
}
.videoplayer .closebutton image{
  width: 100%;
  height: 100%;
}
