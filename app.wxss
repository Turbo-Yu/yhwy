/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: Arial, Geneva, Helvetica, sans-serif;
}
.mask{
  z-index: 99;
  width: 100%;
  height: 100%;
  background: black no-repeat left 100%;
  opacity: 0.7;
  position: fixed;
  top:0;
  display: none;
}